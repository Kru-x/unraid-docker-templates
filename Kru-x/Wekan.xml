<?xml version="1.0"?>
<Container version="2">
  <Name>Wekan</Name>
  <Repository>mquandalle/wekan:latest</Repository>
  <Registry>https://hub.docker.com/r/mquandalle/wekan/</Registry>
  <Network>bridge</Network>
  <Privileged>false</Privileged>
  <Support/>
  <Overview>Wekan is an open-source and collaborative kanban board application.</Overview>
  <Category>Productivity:</Category>
  <WebUI>http://[IP]:[PORT:5555]/</WebUI>
  <TemplateURL/>
  <Icon>https://rawgit.com/Kru-x/unraid-docker-templates/master/Kru-x/img/wekan.png</Icon>
  <ExtraParams>--link "MongoDB-wekan:db"</ExtraParams>
  <DateInstalled>1475966304</DateInstalled>
  <Description>Wekan is an open-source and collaborative kanban board application.</Description>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>5555</HostPort>
        <ContainerPort>80</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user</HostDir>
      <ContainerDir>/unraid</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Environment>
    <Variable>
      <Value>http://192.168.1.100:5555</Value>
      <Name>ROOT_URL</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value></Value>
      <Name>MAIL_URL</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value></Value>
      <Name>MAIL_FROM</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>mongodb://db</Value>
      <Name>MONGO_URL</Name>
      <Mode/>
    </Variable>
  </Environment>
  <Config Name="Varible ROOT_URL" Target="ROOT_URL" Default="192.168.1.100:5555" Mode="" Description="Ipadress and port chosen for the Wekan site/server, change to your setup. It is for the internal working of the board." Type="Variable" Display="always" Required="true" Mask="false">http://192.168.1.100:5555</Config>
  <Config Name="Port for webinterface" Target="80" Default="5555" Mode="tcp" Description="Port for login to your wekan site" Type="Port" Display="always" Required="false" Mask="false">5555</Config>
  <Config Name="unRAID Share Path" Target="/unraid" Default="/mnt/user" Mode="rw" Description="" Type="Path" Display="hidden" Required="false" Mask="false">/mnt/user</Config>
  <Config Name="smtp variable" Target="MAIL_URL" Default="" Mode="" Description="Set your smtp server ex. (If using Gmail)&#13;&#10;smtp://address@gmail.com:pwd@smtp.gmail.com:465/" Type="Variable" Display="always" Required="false" Mask="false">smtp://jonaskruger1966@gmail.com:Myosotis66@smtp.gmail.com:465/</Config>
  <Config Name="Email from variable" Target="MAIL_FROM" Default="" Mode="" Description="Who to send the mail from MAIL_FROM='wekan-admin@example.com'" Type="Variable" Display="always" Required="false" Mask="false">Wekan jonaskruger1966@gmail.com</Config>
  <Config Name="Varible MONGO_URL" Target="MONGO_URL" Default="mongodb://db" Mode="" Description="Container Variable: MONGO_URL" Type="Variable" Display="advanced-hide" Required="false" Mask="false">mongodb://db</Config>
</Container>
